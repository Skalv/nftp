{% extends "base.twig" %}

{% block content %}
<div class="container">
  <div class="row">
    <form action="/addTramfile" method="post" enctype="multipart/form-data">
      <div class="custom-file">
        <input type="file" class="custom-file-input" id="tramfile" name="tramfile">
        <label class="custom-file-label" for="tramfile">Fichier de trame</label>
      </div>
      <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>
  </div>

  <div class="row">
    <table class="table col-8">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">FileName</th>
          <th scope="col">uploadAt</th>
          <th scope="col">Processed</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for file in files %}
          <tr>
            <th scope="row">{{file.id}}</th>
            <td>{{file.filename}}</td>
            <td>{{file.uploadAt}}</td>
            <td> {% if file.processed == 1 %}Yes{% else %}No{% endif %}</td>
            <td>
              <a class="btn btn-info" href="/processFile/{{file.id}}">Process</a>
            </td>
          </tr>
        {% endfor %}  
      </tbody>
    </table>
  </div>
</div>
{% endblock %}